{
  "name": "el-asador-desktop",
  "version": "1.0.0",
  "description": "Sistema El Asador - Aplicaci√≥n de Escritorio",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "node pre-check.js && cross-env NODE_ENV=development electron .",
    "dev:skip-check": "cross-env NODE_ENV=development electron .",
    "check": "node check-setup.js",
    "pre-check": "node pre-check.js",
    "diagnostico": "node diagnostico.js",
    "setup": "node check-setup.js && echo Ejecuta setup.bat (Windows) o setup.sh (Linux/Mac) para instalar dependencias",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "author": "dennis",
  "license": "MIT",
  "dependencies": {
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "cross-env": "^7.0.3"
  },
  "build": {
    "appId": "com.elasador.desktop",
    "productName": "El Asador",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "utils/**/*",
      "icon.png"
    ],
    "extraResources": [
      {
        "from": "../Backend",
        "to": "Backend",
        "filter": [
          "**/*",
          "!node_modules/**/*"
        ]
      },
      {
        "from": "../Frontend/dist",
        "to": "Frontend"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "icon.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
